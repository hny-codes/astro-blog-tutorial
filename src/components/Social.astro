---
const { platform, username } = Astro.props;
---

<a
  href={`https://${platform}.com/${username}`}
  style='text-transform: capitalize;'>{platform}</a
>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>